/* pages/wx_epidemic/history/history.wxss *//* pages/wx_epidemic/history/history.wxss */
@import "../../../colorui/animation.wxss";
@import "../../../colorui/main.wxss";
.top{
  background-image: linear-gradient(#6dd5ed, #9198e5);
}
.history-title{
  color: aliceblue;
  display: grid;
  justify-content: center;
  font-size: 50rpx;
  padding-top: 10%;
  font-family: 14px/1.5 "Helvetica Neue",Helvetica,Arial,"Microsoft Yahei","Hiragino Sans GB","Heiti SC","WenQuanYi Micro Hei",sans-serif;

}

.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox{
  display: flex;
}
.VerticalMain{
  background-color: #f1f1f1;
}

.history-index{
display: grid;
justify-items: center;

}